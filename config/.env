# Environment Settings
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGO_URI=mongodb://127.0.0.1:27017/your_database_name
# Use 127.0.0.1 instead of localhost to avoid DNS resolution issues on some systems.

# JWT Configuration
JWT_SECRET=your_super_secret_key
# Use a long, randomly generated secret in production.
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# File Upload Settings
FILE_UPLOAD_PATH=./public/uploads
MAX_FILE_UPLOAD=1048576
# Ensure the ./public/uploads directory exists and has write permissions.

# SMTP Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_EMAIL=your_smtp_email
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@quizzapp.com
FROM_NAME=QuizApp

# Optional Debugging/Logging
LOG_LEVEL=debug
# Set this to "info" or "warn" in production to reduce verbose logging.
